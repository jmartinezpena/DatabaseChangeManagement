@model EmployeeDirectory.Features.Role.RoleAssignment.Command
@{
    ViewBag.Title = "Assign Roles for " + Model.EmployeeName;
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.EmployeeId)
    for (int i = 0; i < Model.Roles.Length; i++)
    {
        <div>
            @Html.HiddenFor(m => m.Roles[i].RoleId)
            @Html.CheckBoxFor(m => m.Roles[i].Selected)
            @Html.LabelFor(m => m.Roles[i].Selected, Model.Roles[i].Name)
        </div>
    }

    <div>
        @Html.SaveButton()
        @Html.CancelButton(Url.Action("Index", "Employee"))
    </div>
}